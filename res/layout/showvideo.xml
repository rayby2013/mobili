<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical" 
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent">
	
	<TextView android:id="@+id/title" 
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content" android:text="@string/loading"/>
	
	<ImageView android:src="@drawable/icon" 
			   android:id="@+id/doga_img"
			   android:layout_width="320dip" android:layout_height="240dip"></ImageView>
	
	<TextView android:id="@+id/uper_name"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content" android:text="@string/loading"></TextView>
	
	<WebView android:id="@+id/doga_description" 
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"></WebView>
</LinearLayout>